                `${query} Manager`, `${query} Architect`, `Junior ${query}`, `${query} Analyst`
            ];
            
            const locations = [
                location || 'Cape Town, SA', 'Johannesburg, SA', 'Remote (South Africa)', 
                'Durban, SA', 'Pretoria, SA', 'Stellenbosch, SA'
            ];
            
            const skills = [
                ['React', 'Node.js', 'TypeScript', 'AWS'], 
